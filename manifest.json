  

  {
    "manifest_version": 3,
    "name": "List It !",
    "version": "1.0.0",
    "description": "An extension to save and manage your todo list.",
    "permissions": [
      "activeTab",
      "management",
      "storage"
    ],

    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon32.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon32.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  